<div class="mt-4">
    <h3>Create Online Course</h3>
    <form method="POST" action="store">

  <div class="row mb-3">
    <label for="name" class="col-sm-2 col-form-label">Course name</label>
    <div class="col-sm-10">
      <input type ="text" class="form-control" id="name" name="name">
    </div>
  </div>

  <div class="row mb-3">
    <label for="description" class="col-sm-2 col-form-label">Course description</label>
    <div class="col-sm-10">
      <input type ="text" class="form-control" id="description" name="description">
    </div>
  </div>
  <div class="row mb-3">
    <label for="videoId" class="col-sm-2 col-form-label">Course video</label>
    <div class="col-sm-10">
      <input type ="text" class="form-control" id="videoId" name="videoId">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Create course</button>
</form>
</div>
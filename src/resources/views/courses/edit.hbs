<div class="mt-4">
    <h3>Update Online Course</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">

  <div class="row mb-3">
    <label for="name" class="col-sm-2 col-form-label">Course name</label>
    <div class="col-sm-10">
      <input type ="text" class="form-control" value="{{course.name}}"id="name" name="name">
    </div>
  </div>

  <div class="row mb-3">
    <label for="description" class="col-sm-2 col-form-label">Course description</label>
    <div class="col-sm-10">
      <textarea  class="form-control" id="description" name="description">{{course.description}}</textarea>
    </div>
  </div>
  <div class="row mb-3">
    <label for="videoId" class="col-sm-2 col-form-label">Course video</label>
    <div class="col-sm-10">
      <input type ="text" class="form-control" value="{{course.videoId}}"id="videoId" name="videoId">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>